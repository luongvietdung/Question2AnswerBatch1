<header class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <a class="navbar-brand" <%= link_to "Question2Answer", root_path %></a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li class="active"><a href="#">Hot</a></li>
        <li class="active"><a href="#">Tags</a></li>
        <li class="active"><a href="#">Users</a></li>
        <li class="active"><a href="#">Ask a question</a></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"  aria-haspopup="true" aria-expanded="false">Questions<span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><a href="#">Recent</a></li>
            <li><a href="#">Hot!</a></li>
            <li><a href="#">Most votes</a></li>
            <li><a href="#">Most answers</a></li>
            <li><a href="#">Most views</a></li>
          </ul>
        </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Unanswered<span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><a href="#">No answer</a></li>
            <li><a href="#">No selected answer</a></li>
            <li><a href="#">No upvoted answer</a></li>
          </ul>
        </li>
        <form class="navbar-form navbar-left">
          <div class="form-group">
            <input type="text" class="form-control" placeholder="Search">
          </div>
            <button type="submit" class="btn btn-default">Search</button>
        </form>
        <% if logged_in? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Hello" , current_user %></li>
                <li>
                    <%= link_to "Log out", logout_path, method: :delete %>
                </li>
              </ul>
            </li>
        <% else %>
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "Log in", login_path %></li>
          </ul>
        <% end %>
      </ul>
    </div>
  </div><!-- /.container-fluid -->
</header>
